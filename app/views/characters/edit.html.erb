<% provide(:title, 'character_new') %>
<h1>キャラクター・アップデート</h1>
<h3>基本情報<h3>
<div class="row">
  <div class ="col-md-4">
  <%= form_for(@character) do |f| %>
    <%= f.label :chara_name,'キャラの名前' %>
    <%= f.text_field :chara_name, class: 'form-control' %>

    <%= f.label :appear_in,'登場作品' %>
    <%= f.text_field :appear_in, class: 'form-control'%>

    <%= f.submit "アップデート", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>