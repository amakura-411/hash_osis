<% provide(:title, 'キャラクター　登録') %>
<h1>基本情報</h1>
 
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @character, local: true) do |f| %>
    <%= render '/characters/shared/error_messages', model: f.object %>
    <div class="field">
      キャラの名前<%= f.text_field :chara_name %>
      <p></p>
      登場作品<%= f.text_field :appear_in  %>
    </div>
    <%= f.submit "create", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>