<li id="character-<%= character.id %>">
  <%= link_to gravatar_for(character.user, size: 50), character.user %>
  <span class="user"><%= link_to character.user.name, character.user %></span>
  <span class="chara_name"><%= character.chara_name %></span>
  <span class="appear_in"><%= character.appear_in %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(character.created_at) %> ago.
  </span>
</li>