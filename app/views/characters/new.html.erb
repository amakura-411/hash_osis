<title>試し</title>
<body>
<div container class="containar">
   <div class="col-md-6">テーブル</div>
   <div class="col-md-6"><h2>基本情報欄</h2>
   <br>
    <%= form_for(@character) do |f| %>
      <div class="form-floating m-3">
      <%= f.text_field :chara_name, class: 'form-control', :placeholder => "江戸川コナン" %>
        <%= f.label   :chara_name,'キャラクター名：' %>
      </div>
      <br>
      <div class="form-floating  m-3">
        <%= f.text_field :appear_in, class: 'form-control', :placeholder => "名探偵コナン" %>
        <%= f.label :appear_in,'登場作品のタイトル：' %>
      </div>
      <br>
       <div class="form-check form-check-inline">
        <li>グループ１</li>
            <%= f.check_box :element_list,  { multiple: true, class: "btn-check", autocomplete: "off"},  "赤目" , nil %>
            <%= f.label :elemet_list,'赤目', {class: "btn btn-outline-primary btn-lg active"}  %>
            <%= f.check_box :element_list,  { multiple: true, class: "btn-check" },  "青目" , nil %>
            <%= f.label :elemet_list,'青目', {class: "btn btn-outline-primary  btn-lg active"}  %>
            <%= f.check_box :element_list,  { multiple: true, class: "btn-check" },  "金目" , nil %>
            <%= f.label :elemet_list,'金目', {class: "btn btn-outline-primary  btn-lg active"}  %>
        </div>
      <%= f.submit "アップデート", class: "btn btn-primary", id:"submits" %>
    <% end %>
    <br>
  </div>
</div>

</body>